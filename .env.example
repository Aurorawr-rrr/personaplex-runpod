# PersonaPlex RunPod Environment Variables
# Copy this to .env and fill in your values

# Hugging Face token (required)
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here

# Docker Hub username
DOCKER_USERNAME=yourusername

# RunPod API Key (for testing)
# Get from: https://www.runpod.io/console/user/settings
RUNPOD_API_KEY=your_runpod_api_key

# PersonaPlex server port (default: 8998)
PERSONAPLEX_PORT=8998

# Enable CPU offload for lower VRAM GPUs (default: false)
CPU_OFFLOAD=false
